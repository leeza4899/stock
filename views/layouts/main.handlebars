        </ul>
        <form class="form-inline my-2 my-lg-0" action="/" method="POST">
          <input class="form-control mr-sm-2" type="search" placeholder="Stock Quote" aria-label="Search" name="stock_ticker">
          <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Look Up</button>
        </form>
      </div>
    </nav>
    <div class="container">
      {{{body}}}
